def main():
    '''
    a main function to print and call the others function to compute a miles 
    per gallon and liters per kilometers
    '''
    start_miles = int(input('Enter the first odometer reading (miles): '))
    end_mile = int(input('Enter the second odometer reading (miles): '))
    amount_gallons = float(input('Enter the amount of fuel used (gallons): '))
    mpg = miles_per_gallon(start_miles, end_mile, amount_gallons)
    lp100k_value = lp100k_from_mpg(mpg)

    print(f'{mpg:.1f} miles per gallon')
    print(f'{lp100k_value:.2f} liters per 100 kilometers')


def miles_per_gallon(start_miles, end_mile, amount_gallons):
    '''
    compute a miles per gallon and return the result
    '''
    return (end_mile - start_miles) / amount_gallons

def lp100k_from_mpg(mpg):
    '''
    compute the value fro liters per 100km
    '''
    return 235.215 / mpg

#call the main function to execute the code
main()
